<%= fields_for item do |f| %>
  <%-
    images = f.object.public_send(:wds_server).install_images rescue []
    images = images.select { |img| img.version == "#{f.object.operatingsystem.major}.#{f.object.operatingsystem.minor}" } if f.object.operatingsystem
  -%>
  <%= select_f f, :wds_image_name, images, :name, :name,
    { selected: item.wds_image_name, include_blank: blank_or_inherit_f(f, :wsd_server) },
    { label: _("WDS Install Image"),
      disabled: images.empty? ? true : false,
      help_inline: :indicator,
      onchange: 'wds_image_selected(this);', :'data-url' => ''||method_path('wds_image_selected'), :'data-type' => controller_name.singularize, required: true}
  %>
<% end %>
